{
  "name": "cca-auction-sim",
  "version": "0.1.0",
  "description": "Multi-mechanism auction simulation engine for CCA bot tournaments",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "tsx src/run.ts",
    "sim": "tsx src/run.ts",
    "sim:quick": "tsx src/run.ts --runs=20",
    "sim:full": "tsx src/run.ts --runs=500",
    "sim:random": "tsx src/run.ts --runs=100 --mode=random_pool --pool=6",
    "play": "tsx src/interactive.ts",
    "play:test": "tsx src/interactive.ts --test",
    "play:full": "tsx src/interactive.ts --name=claude",
    "test": "jest --verbose",
    "test:coverage": "jest --coverage"
  },
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "decimal.js": "^10.4.3"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.7.0"
  }
}
